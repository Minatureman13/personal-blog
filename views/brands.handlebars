{{#section 'head'}}
    <!-- Custom CSS -->
    <link href="/assets/css/jasny-bootstrap.min.css" rel="stylesheet">

    <!-- Custom JavaScript -->
    <script src="/assets/js/jasny-bootstrap.js"></script>
{{/section}}

<!-- Navigation -->
{{> page/nav/nav}}

<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3" id="nav-list">
            <div id="sidebar-wrapper">
                <nav id="scrollspy-target">
                    <ul class="nav nav-pills nav-stacked sidebar-nav">
                        <li class="sidebar-brand"><span>Navigation</span></li>
                        <li><a href="#home">Home</a></li>
                        {{#each brands}}
                            <li><a href="#{{this.NAME}}">{{ this.NAME }}</a></li>
                        {{/each}}
                    </ul>
                </nav>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Main Content-->
        <div class="col-md-9">
            
            <!-- Jumbotron Title-->
            <div class="jumbotron">
                <h1>Brands</h1>
                <h3>Best Canopy Tent Brand Reviews</h3>
            </div>

            <!-- Reviews-->
            <div>
                <!-- Products-->
                <table class="table">
                    <tbody>
                        {{#each brands}}
                            <tr id="{{this.NAME}}">
                                <td>
                                    <span itemprop="brand" itemscope itemtype="http://schema.org/Brand">
                                        <br/>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6 col-md-offset-3">
                                                <a href="{{this.BRANDURL}}" class="thumbnail no-border">
                                                    <img src="{{this.LOGOURL}}" alt="{{this.NAME}} logo'" itemprop="logo">
                                                </a>
                                            </div>
                                        </div>
                                    
                                        <span itemprop="review" itemscope itemtype="http://schema.org/Review">
                                            <div itemprop="reviewBody">
                                                {{{this.REVIEW}}}
                                            </div>
                                            <meta itemprop="author" content="Kenny H"/>
                                        </span>
                                    </span>
                                    <!-- Brand on Amazon-->
                                    <div class="text-centered">
                                        <a href="{{this.PRODUCTSURL}}" class="no-decor">
                                            <button type="button" class="btn btn-primary btn-lg btn-block">
                                                <span>See </span>
                                                <span>{{this.NAME}}</span>
                                                <span> Products on Amazon</span>
                                            </button>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
        <!-- /Main Conent-->
    </div><!-- /Row-->
</div><!-- /Page Content -->

<!-- Footer Content-->
{{> page/footer}}

<script>
    document.body.setAttribute("data-spy","scroll");
    document.body.setAttribute("data-target","#scrollspy-target");
    document.body.setAttribute("data-offset","100");
</script>